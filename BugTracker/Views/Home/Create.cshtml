
@model UserCreateViewModel

@{
    ViewBag.Title = "Create Account";
}

<br />
<h1 class="text-center">Create an account</h1>
<br />

<div class="container" style="padding:20px; width:80%; margin:auto">
    <form method="post" asp-action="Create">
        
        <div class="form-group">
            <div class="form-group row">
                <div class="col-6">
                    <b class="text-black-50">Username*</b>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <b class="text-black-50">Email address*</b>
                </div>
                <div class="col-6">
                    <b class="text-black-50">Organization name*</b>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <input asp-for="Organization" class="form-control" />
                    <span asp-validation-for="Organization" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <b class="text-black-50">Account type*</b>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <select asp-for="Account" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Acct>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-12 text-right">
                    <input type="submit" class="btn btn-primary form-control" style="width:100px" />
                </div>
            </div>
        </div>
    </form>
</div>
