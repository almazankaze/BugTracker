@model EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
    var PhotoPath = "~/images/" + (Model.ExistingPhotoPath ?? "default-user.png");
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Profile</h1>
    </div>

    <form enctype="multipart/form-data" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />

        <div class="form-group row col-sm-4 offset-1">
            <img src="@PhotoPath" style="width:100px; height:auto" asp-append-version="true" />
            <b class="col-sm-2 col-form-label">@Model.UserName</b>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.FirstName" class="col-sm-2 offset-1 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="@Model.FirstName" class="form-control">
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.LastName" class="col-sm-2 offset-1 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="@Model.LastName" class="form-control">
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.Photo" class="col-sm-2 offset-1 col-form-label"></label>
            <div class="col-sm-8">
                <div class="custom-file">
                    <input asp-for="@Model.Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click Here To Change Photo</label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 offset-1">
                <a asp-action="ChangePassword" class="btn btn-danger">Change Password</a>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-2 offset-1">
                <button type="submit" class="btn btn-primary">Update</button>

            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var filename = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(filename);
                    });
                });
            </script>
        }

    </form>
</div>
