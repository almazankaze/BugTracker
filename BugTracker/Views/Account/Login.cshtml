@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container">

    <br />
    <h1 class="text-info text-center">Welcome Back</h1>
    <br />

    <div class="row justify-content-center align-items-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label class="h6 font-weight-bold" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="h6 font-weight-bold" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <a asp-action="ForgotPassword">Lost your password?</a>

                <div class="checkbox float-right">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>

                <div style="padding-top:20px; text-align:center">
                    <button type="submit" class="btn btn-primary" style="width:75px">Login</button>
                </div>
                

                <div style="padding-top:40px; text-align:center">
                    <h6>Don't have an account?
                        <a asp-controller="account" asp-action="register"> Sign up</a>
                    </h6>
                </div>
            </form>
        </div>
    </div>
</div>