@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<br />
<h1 class="text-info text-center">Welcome Back</h1>
<br />

<div class="container" style="padding:20px; width:50%; margin:auto">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-10 checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary float-right" style="width:75px">Login</button>
            </div>
        </div>
    </form>

    <div class="container" style="padding:30px; width:50%; margin:auto">
        <div class="text-center">
            <h5>Don't have an account?</h5>
            <br />
            <button class="btn btn-secondary" style="width:100px;">Sign up</button>
        </div>
    </div>
</div>