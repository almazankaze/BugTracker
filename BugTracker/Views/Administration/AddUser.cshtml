@model AddUserViewModel

@{
    ViewBag.Title = "Add User";
}

<br />
<h1 class="text-info text-center">Add User</h1>
<br />


<div class="container" style="padding:20px; width:80%; margin:auto">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="form-group row">
                <div class="col-6">
                    <b class="text-black-50">Email*</b>
                </div>
                <div class="col-3">
                    <b class="text-black-50">First name*</b>
                </div>
                <div class="col-3">
                    <b class="text-black-50">Last name*</b>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <b class="text-black-50">Password*</b>
                </div>
                <div class="col-6">
                    <b class="text-black-50">Confirm Password*</b>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-right">
                    <button type="submit" class="btn btn-primary form-control" style="width:100px">Add</button>
                </div>
            </div>
        </div>
    </form>
</div>
