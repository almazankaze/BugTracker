@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<div class="container" style="padding:20px; width:80%; margin:auto">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Current Team</h1>
    </div>

    @if (Model.Any())
    {
        <a asp-action="adduser" asp-controller="administration"
           class="btn btn-primary mb-3" style="width:auto">
            Add new user
        </a>

        foreach (var user in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    @user.FirstName @user.LastName
                </div>
                <div class="card-body">
                    <h5 class="card-title">User Id : @user.Id</h5>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">

                        <a asp-action="Profile" asp-controller="Account"
                           asp-route-id="@user.Id" class="btn btn-primary">Profile</a>

                        <span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Are you sure you want to delete?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@user.Id', false)">No</a>
                        </span>

                        <span id="deleteSpan_@user.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@user.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No users created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a user
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="administration" asp-action="adduser">
                    Add new user
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}